<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_green"
    android:padding="16dp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/profile_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="24dp"
        android:text="Profile Settings"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="viewStart" />

    <!-- Subtitle TextView -->
    <TextView
        android:id="@+id/profile_settings_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_settings_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:text="Manage your profile details and preferences."
        android:textColor="@color/soft_blue_green"
        android:textSize="14sp"
        android:textAlignment="viewStart" />

    <!-- Account Details TextView -->
    <TextView
        android:id="@+id/account_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_settings_subtitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        android:text="Account Details"
        android:textColor="@color/soft_blue_green"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="viewStart" />

    <!-- Details LinearLayout -->
    <LinearLayout
        android:id="@+id/details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_details_text"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_alignParentStart="true">


        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_background"
            android:hint="First Name"
            android:padding="12dp"
            android:textColor="@color/soft_blue_green"
            android:textColorHint="@color/soft_blue_green" />


        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_background"
            android:hint="Last Name"
            android:padding="12dp"
            android:textColor="@color/soft_blue_green"
            android:textColorHint="@color/soft_blue_green" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_background"
            android:hint="Email"
            android:padding="12dp"
            android:textColor="@color/soft_blue_green"
            android:textColorHint="@color/soft_blue_green" />



        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/rounded_background"
            android:padding="12dp"
            android:textColor="@color/soft_blue_green"
            android:textColorHint="@color/soft_blue_green" />
    </LinearLayout>


    <Button
        android:id="@+id/save_changes_button"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/custom_button"
        android:padding="16dp"
        android:text="Save Changes"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</RelativeLayout>
